<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/updateName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="updateName"
        android:text="Name" />

    <Button
        android:id="@+id/updatePhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="updatePhone"
        android:text="Phone" />

    <Button
        android:id="@+id/updateWork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="updateWork"
        android:text="Workplace" />

    <Button
        android:id="@+id/updateOccu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="updateOccu"
        android:text="Occupation" />

</LinearLayout>